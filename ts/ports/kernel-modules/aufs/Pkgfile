# Description:  Advanced Unification Filesystem
# URL:          http://aufs.sourceforge.net/
# Packager:     
# Maintainer:   

name=aufs
version=3.14
release=3.14.9
source=()

build() {
    git clone git://git.code.sf.net/p/aufs/aufs3-standalone \
	$name
    cd $name
    git checkout origin/aufs$version

    sed -i -e 's/CONFIG_AUFS_PROC_MAP =.*/CONFIG_AUFS_PROC_MAP = y/' \
	-e 's/CONFIG_AUFS_DEBUG =.*/CONFIG_AUFS_DEBUG = /' \
	config.mk

    mkdir -p $PKG/usr/include/linux
    make KDIR=/usr/src/kernels/${release}TS \
	install_headers DESTDIR=$PKG

    make KDIR=/usr/src/kernels/${release}TS \
	install MODLIB=$PKG/lib/modules/${release}TS \
	INSTALL_MOD_DIR=kernel/fs/aufs \
	MODSECKEY=/etc/ssl/keys/kernel.key \
	MODPUBKEY=/etc/ssl/certs/kernel.crt
    make KDIR=/usr/src/kernels/${release}TS clean

    make KDIR=/usr/src/kernels/${release}TS_SMP \
	install MODLIB=$PKG/lib/modules/${release}TS_SMP \
	INSTALL_MOD_DIR=kernel/fs/aufs \
	MODSECKEY=/etc/ssl/keys/kernel.key \
	MODPUBKEY=/etc/ssl/certs/kernel.crt
    make KDIR=/usr/src/kernels/${release}TS_SMP clean

    make KDIR=/usr/src/kernels/${release}TS_64 \
	install MODLIB=$PKG/lib/modules/${release}TS_64 \
	INSTALL_MOD_DIR=kernel/fs/aufs \
	MODSECKEY=/etc/ssl/keys/kernel.key \
	MODPUBKEY=/etc/ssl/certs/kernel.crt \
	CROSS_COMPILE="/opt/cross/x-tools/x86_64-thinstation-linux-gnu/bin/x86_64-thinstation-linux-gnu-"
}

